<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/capa"/>
    <!-- android:src="@drawable/capa_etapa13" /> -->

<TextView
    android:id="@+id/item_titulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/item_poster"
    android:background="#D8000000"
    android:gravity="center"
    android:maxLength="150"
    android:padding="5dp"
    android:text="TÃ­tulo"
    android:textColor="@android:color/white"
    android:textSize="24sp"
    android:textStyle="bold" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/item_poster"
    android:background="#D8000000"
    android:padding="5dp">

    <RatingBar
        android:id="@+id/item_avaliacao"
        style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:numStars="5"
        android:rating="3" />
</FrameLayout>

</RelativeLayout>